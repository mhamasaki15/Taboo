<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="50dp">

    <TextView
        android:layout_width="250dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="50dp"
        android:id="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_below="@id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textAlignment="center"
        android:id="@+id/main_word"
        android:text="MainWord" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textAlignment="center"
        android:id="@+id/tabooText1"
        android:text="Taboo1"
        android:layout_below="@id/main_word"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textAlignment="center"
        android:id="@+id/tabooText2"
        android:text="Taboo2"
        android:layout_below="@id/tabooText1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textAlignment="center"
        android:id="@+id/tabooText3"
        android:text="Taboo3"
        android:layout_below="@id/tabooText2"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textAlignment="center"
        android:id="@+id/tabooText4"
        android:text="Taboo4"
        android:layout_below="@id/tabooText3"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textAlignment="center"
        android:id="@+id/tabooText5"
        android:text="Taboo5"
        android:layout_below="@id/tabooText4"
        />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal"
        android:layout_below="@id/tabooText5"
        tools:context="com.example.melanie.taboo.TitleScreenActivity">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="Pass"
            android:textSize="25dp"
            android:background="#5DC2CC"
            android:onClick="passWord"
            android:id="@+id/passButton" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Got It!"
            android:textSize="25dp"
            android:onClick="correctWord"
            android:background="@android:color/holo_green_light"
            android:id="@+id/gotItButton" />

    </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearlayout"
            android:onClick="roundOver"
            android:text="temp send to tony"
            android:id="@+id/button3" />


</RelativeLayout>